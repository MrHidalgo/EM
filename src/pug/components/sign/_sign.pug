// SECTION :: START

section#sign.sign

	.sign__wrapper
		.sign__wrapper-left

			h1.sign__title
				| Full-Featured
				br
				| Email Verification.
				br
				| But half the price ðŸ™‚

			p.sign__desc Get rid of spam traps, hard bounces, disposable or catch-all emails without breaking your budget.

		.sign__wrapper-right

			.logo.logo--sign
				a.logo__btn(href="#")
					img.logo__img(src="img/logo.svg" alt="")

			.sign__header
				div
					p.sign__header-title Create an account
				div
					p.sign__header-info!= "or <a href='/sign-in.html'>Log in</a>"

			form#createAccountForm.sign__form.c-form(action='' method='' autocomplete='off')
				.sign__form-field.sign__form-field--input.c-form__field
					input(type='text' id='full_name' name='full_name' placeholder='' input-js required)
					label(for='full_name') Full Name
					i.icon-font.icon-check
					i.icon-font.icon-close

				.sign__form-field.sign__form-field--input.c-form__field
					input(type='email' id='email' name='email' placeholder='' input-js required)
					label(for='email') Enter your email address
					i.icon-font.icon-check
					i.icon-font.icon-close

				.sign__form-field.sign__form-field--input.c-form__field
					input(type='password' id='password' name='password' placeholder='' input-js required)
					label(for='password') Enter your password
					a(href="#" password-js)
						i.icon-font.icon-eye
						i.icon-font.icon-eye-line

				.sign__form-field.sign__form-field--checkbox.c-form__field

					.c-checkbox
						input(type='checkbox' id='agree' name='')
						label(for='agree')
							span
								i
									i.icon-font.icon-check
							span
								u!= "I agree to <a href='#'>EmailMarker terms.</a>"

				.sign__form-field.sign__form-field--btn
					.c-btn__wrapper
						button.c-btn.c-btn--blue(type='submit')
							span Create an account

				.sign__form-field.sign__form-field--btn
					.c-btn__wrapper
						a.c-btn.c-btn--social(href="#")
							img(src="img/logo-google-plus.svg" alt="")
							span Sign in with Google

				.sign__form-field.sign__form-field--info
					p!= "This page is protected by reCAPTCHA, and subject to the <br>Google <a href='#'>Privacy Policy</a> and <a href='#'>Terms of service</a>."

// SECTION :: END
