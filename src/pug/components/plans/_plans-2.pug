section#plans.plans

	.c-grid

		.plans__wrapper

			.plans__wrapper-left

				p.plans__title Pay only for what you need!
				p.plans__subtitle No montly payment and your credit never expire

				.plans__box-wrapper
					each val, idx in ['1,000', '5,000', '10,000', '15,000', '25,000', '50,000', '100,000', '300,000', '500,000', '700,000', '1M', '2M']
						div
							a.plans__box(href="#" plans-box-js)
								.plans__box-bg
									span
									span
									span
								.plans__box-content
									.plans__box-header
										.plans__box-img
											svg(xmlns='http://www.w3.org/2000/svg' width='30' height='27' viewBox='0 0 30 27')
												path(d='M30,7.579V19.421A7.556,7.556,0,0,1,22.453,27H7.587A7.57,7.57,0,0,1,0,19.434V7.579A7.44,7.44,0,0,1,.467,5a7.573,7.573,0,0,1,7.12-5H22.413a7.573,7.573,0,0,1,7.16,5.088A6.947,6.947,0,0,1,30,7.579Z' transform='translate(0 0)')
												path(d='M29.106,5.1l-.147.12c-2.76,2.145-11.693,9.324-11.693,9.324a4.23,4.23,0,0,1-5.333,0S3.053,7.379.293,5.235L0,5.008A7.573,7.573,0,0,1,7.12,0H21.946A7.573,7.573,0,0,1,29.106,5.1Z' transform='translate(0.467 0)')
										p.plans__box-count!= val
									.plans__box-body
										p.plans__box-info $0.0003 Per verification
								.plans__box-footer
									p.plans__box-price!= '$999,9'

				.plans__action
					p.plans__action-title More than 2 million emails to verify ?
					p.plans__action-subtitle No problem , just contact us and you will get the best deals, discounts and prices.

					.c-btn__wrapper
						a.c-btn.c-btn--blue(href="#")
							span Contact Us
							i.icon-font.icon-arrow-right

				a.plans__info(href="#") Privacy Policy & Terms

			.plans__wrapper-right

				.plans__stat
					a.plans__stat-close(href="#")
						i.icon-font.icon-close
					form#plansForm.plans__form.c-form(action='' method='' autocomplete='off')
						p.plans__form-title How many verification do you need?
						.c-form__field-group
							.c-form__field.is-focus
								input(type='text' id='plans_num' name='plans_num' value="0000" input-js required)
								label(for='plans_num') Num Verification
								i.icon-font.icon-check
								i.icon-font.icon-close
							.c-form__field
								.c-btn__wrapper
									button.c-btn.c-btn--blueBorder(type='submit')
										span How much?

					.plans__stat-line

					.plans__table
						.plans__table-head
							.plans__table-tr
								.plans__table-th
									p Package
								.plans__table-th
									p Price
						.plans__table-body
							each val, idx in [1,2,3]
								.plans__table-tr
									.plans__table-td
										span 50,000
									.plans__table-td
										span $20
										a.minus(href="#")
											i.icon-font.icon-circle-minus

					.plans__stat-total
						div
							p Total
							span 355,000
						div
							p Price
							span!= "<b>$438</b>"

					.c-btn__wrapper.plans__stat-btn
						a.c-btn.c-btn--blue(href="#")
							span Checkout Now

					.plans__stat-method
						div
							img(src="img/img-mastercard.svg" alt="")
						div
							img(src="img/img-paypal.svg" alt="")
						div
							img(src="img/img-visa.svg" alt="")
						div
							img(src="img/img-discover.svg" alt="")
						div
							img(src="img/img-american-express.svg" alt="")

				.plans__notes
					div
						p.plans__notes-title ðŸ’¡Notes!
					div
						ul
							li
								span In order to approve your payment immediately, please do not use VPN or other IP changing tools while you are in the bank gateway.
							li
								span If you have a discount code, choose PayPro Global gateway and apply that while checkout.

// SECTION :: END
