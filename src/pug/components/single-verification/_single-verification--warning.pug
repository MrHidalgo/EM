					ul.single-verification__list
						li
							div Status
							div.red Valid
						li
							div Syntax error
							div False
						li
							div Domain
							div gmail.com
						li
							div Role
							div False
						li
							div Disposable
							div False
						li
							div Accept-all
							div.red False
						li
							div Spam trap
							div False
						li
							div Free email
							div True

